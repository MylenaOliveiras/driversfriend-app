<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="HomeCardStyle" parent="">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="cardBackgroundColor">@color/grayLight</item>
    </style>

    <style name="HomeCardTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textColor">@color/grayDark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HomeCardIconStyle">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:tint">@color/purpleMedium</item>
    </style>

    <style name="Widget.App.TextInputLayout.VehicleForm" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_input_box_stroke_color</item>
        <item name="hintTextColor">@color/text_input_box_stroke_color</item>
        <item name="android:textColorHint">#3F0071</item>
        <item name="boxCornerRadiusTopStart">24dp</item>
        <item name="boxCornerRadiusTopEnd">24dp</item>
        <item name="boxCornerRadiusBottomStart">24dp</item>
        <item name="boxCornerRadiusBottomEnd">24dp</item>
        <item name="boxStrokeWidth">3dp</item>
    </style>

    <style name="Widget.App.TextInputLayout.VehicleForm.ExposedDropdownMenu" parent="Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/text_input_box_stroke_color</item>
        <item name="hintTextColor">@color/text_input_box_stroke_color</item>
        <item name="android:textColorHint">#3F0071</item>
        <item name="boxCornerRadiusTopStart">24dp</item>
        <item name="boxCornerRadiusTopEnd">24dp</item>
        <item name="boxCornerRadiusBottomStart">24dp</item>
        <item name="boxCornerRadiusBottomEnd">24dp</item>
        <item name="boxStrokeWidth">3dp</item>
    </style>

    <style name="Widget.App.Button.VehicleForm" parent="Widget.Material3.Button">
        <item name="backgroundTint">#3F0071</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textSize">18sp</item>
        <item name="textAllCaps">false</item>
    </style>



</resources>